{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <h1>Companies</h1>
        <table class="table table-hover">
            <thead class="thead-light">
            <tr>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>
            {% for company in companies %}
                <tr scope="row">
                    <td>{{ company.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
